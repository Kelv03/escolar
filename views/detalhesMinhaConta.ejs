<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <title>Detalhes da Minha Conta</title>
    <link rel="stylesheet" href="/css/estilo.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <%- include("partials/cabecalho") %>

    <div class="container mt-4">
        <h1>Detalhes da Minha Conta</h1>

        <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-<%= message.tipo %> alert-dismissible fade show" role="alert">
                <%= message.texto %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <dl class="row">
            <dt class="col-sm-3">Nome:</dt>
            <dd class="col-sm-9"><%= usuario.nome || 'NÃ£o informado' %></dd>

            <dt class="col-sm-3">E-mail:</dt>
            <dd class="col-sm-9"><%= usuario.email %></dd>

            </dl>

        <a href="/minha-conta/editar" class="btn btn-primary">Editar Minha Conta</a>
        <a href="/" class="btn btn-secondary">Voltar</a>
    </div>

</body>
</html>