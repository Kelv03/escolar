<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastro de Aluno</title>
    <link rel="stylesheet" href="/css/estilo.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <%- include("partials/cabecalho") %>

    <div class="container mt-4">
        <h1>Formulário de Cadastro</h1>

        <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-<%= message.tipo %> alert-dismissible fade show" role="alert">
                <%= message.texto %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <form action="/alunos" method="post">
            <div class="row">
                <div class="col-md-6">
                    <label for="matricula" class="form-label">Matrícula:</label>
                    <input type="text" id="matricula" name="matricula" class="form-control" required>
                </div>
                <div class="col-md-6">
                    <label for="nome" class="form-label">Nome:</label>
                    <input type="text" id="nome" name="nome" class="form-control" required>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <label for="disciplina" class="form-label">Disciplina:</label>
                    <input type="text" id="disciplina" name="disciplina" class="form-control" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Salvar</button>
            <a href="/tabela" class="btn btn-secondary mt-3">Ver Tabela de Alunos</a>
        </form>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>